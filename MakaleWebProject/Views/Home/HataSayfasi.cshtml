
@{
    ViewBag.Title = "Hata Sayfasi";

    Exception ex = null;

    if(TempData["Error"]!=null)
    {
        ex = TempData["Error"] as Exception;
    }
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>
            <span class="glyphicon glyphicon-remove-circle"></span>
            Hata Oluştu
        </h2>
        <p>
            Hata oluştu, lütfen site yöneticisi ile ilteşime geçiniz.
            <br />

            @if (ex != null)
            {
                <strong>Hata Detay:</strong>
                @ex.Message
                <br /><br />
            }
        </p>
        @Html.ActionLink("Ana sayfaya git!", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
</div>